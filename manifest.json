{
    "name": "Mapping My Social Network",
    "version": "1.0",
    "description": "Create an interactive vizualization of your social network of Facebook friends!",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "declarativeContent",
        "storage", 
        "activeTab", 
        "tabs"
    ],
    "page_action": {
        "default_icon": {
            "16": "images/frown16.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "images/frown128.png",
        "48": "images/frown48.png",
        "16": "images/frown16.png"
        },
    "manifest_version": 2
    
}